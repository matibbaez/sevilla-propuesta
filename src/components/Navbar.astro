---
// src/components/Navbar.astro
const navLinks = [
  { name: 'Inicio', href: '#inicio' },
  { name: 'Siniestros', href: '#servicios' },
  { name: 'El Estudio', href: '#nosotros' },
];
---

<header 
  id="navbar" 
  class="fixed top-0 left-0 w-full z-50 transition-all duration-300 border-b border-transparent bg-transparent"
>
  <div class="container mx-auto px-6">
    <div class="flex justify-between items-center h-20 transition-all duration-300" id="nav-container">
      
      <a href="#" class="flex items-center gap-3 group z-50 relative">
        <div class="w-9 h-9 md:w-10 md:h-10 bg-accent text-primary flex items-center justify-center font-serif-logo font-bold text-lg md:text-xl rounded-sm shadow-lg group-hover:scale-105 transition-transform duration-300">
          ES
        </div>
        <div class="flex flex-col justify-center">
          <span class="font-serif-logo font-bold text-white text-base md:text-lg leading-none tracking-wide group-hover:text-accent transition-colors duration-300 whitespace-nowrap">ESTUDIO SEVILLA</span>
          <span class="font-body text-[8px] md:text-[10px] uppercase font-medium text-gray-400 tracking-[0.2em]">Abogados</span>
        </div>
      </a>

      <nav class="hidden md:flex items-center gap-8 lg:gap-10">
        {navLinks.map((link) => (
          <a 
            href={link.href} 
            class="text-xs font-bold text-gray-300 hover:text-white transition-colors uppercase tracking-[0.15em] font-body relative group py-2"
          >
            {link.name}
            <span class="absolute bottom-0 left-1/2 w-0 h-px bg-accent group-hover:w-full group-hover:left-0 transition-all duration-300 ease-out"></span>
          </a>
        ))}
        
        <a 
          href="https://wa.me/5491158298302" 
          target="_blank"
          class="group flex items-center gap-2 px-5 py-2.5 bg-accent hover:bg-white text-primary font-bold text-xs uppercase tracking-widest rounded-sm transition-all duration-300 shadow-md hover:shadow-accent/20"
        >
          <span>Contacto Urgente</span>
          <svg class="w-3 h-3 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
        </a>
      </nav>

      <button 
        id="menu-toggle" 
        class="md:hidden relative z-50 w-10 h-10 flex items-center justify-center text-white focus:outline-none group"
        aria-label="Abrir menú"
      >
        <div class="relative w-6 h-4">
          <span class="absolute left-0 w-full h-0.5 bg-white rounded-full transition-all duration-300 ease-in-out origin-center top-0 group-[.is-active]:top-1/2 group-[.is-active]:-translate-y-1/2 group-[.is-active]:rotate-45 group-[.is-active]:bg-accent"></span>
          <span class="absolute top-1/2 -translate-y-1/2 left-0 w-full h-0.5 bg-white rounded-full transition-all duration-300 ease-in-out group-[.is-active]:opacity-0 group-[.is-active]:translate-x-4"></span>
          <span class="absolute left-0 w-full h-0.5 bg-white rounded-full transition-all duration-300 ease-in-out origin-center bottom-0 group-[.is-active]:bottom-1/2 group-[.is-active]:translate-y-1/2 group-[.is-active]:-rotate-45 group-[.is-active]:bg-accent"></span>
        </div>
      </button>

    </div>
  </div>

  <div id="mobile-menu" class="fixed inset-0 bg-[#0f172a] z-40 flex flex-col justify-center items-center opacity-0 pointer-events-none transition-opacity duration-300">
    
    <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-[0.05] mix-blend-overlay"></div>
    <div class="absolute top-0 right-0 w-64 h-64 bg-accent/5 rounded-full blur-[80px] pointer-events-none"></div>

    <nav class="flex flex-col items-center gap-8 relative z-10 w-full px-6 text-center">
      {navLinks.map((link) => (
        <a href={link.href} class="mobile-link text-3xl font-serif-logo text-white hover:text-accent transition-colors tracking-wide">{link.name}</a>
      ))}
      
      <div class="w-16 h-px bg-white/10 my-4"></div>
      
      <a href="https://wa.me/5491158298302" class="mobile-link w-full max-w-xs py-4 bg-accent text-primary font-bold uppercase tracking-widest rounded-sm shadow-lg shadow-accent/20 flex justify-center items-center gap-3 active:scale-95 transition-transform">
        <span>WhatsApp Directo</span>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></path></svg>
      </a>
    </nav>
  </div>
</header>

<style>
  /* Cuando el menú está abierto, forzamos estos estilos en el header */
  /* !important asegura que sobrescriba cualquier clase de Tailwind puesta por JS */
  header.nav-open {
    background-color: #0f172a !important; /* Mismo color que el menú móvil */
    border-color: transparent !important;
    backdrop-filter: none !important; /* Quitamos el blur para que sea sólido */
    box-shadow: none !important; /* Quitamos sombras para que se fusione */
  }
</style>

<script>
  const navbar = document.getElementById('navbar');
  const navContainer = document.getElementById('nav-container');
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileLinks = document.querySelectorAll('.mobile-link');
  
  let isMenuOpen = false;

  function handleScroll() {
    // Si el menú está abierto, NO hacemos nada. El estado .nav-open manda.
    if (isMenuOpen || !navbar || !navContainer) return;
    
    if (window.scrollY > 20) {
      navbar.classList.add('bg-[#0f172a]/90', 'backdrop-blur-md', 'border-white/5', 'shadow-md');
      navbar.classList.remove('bg-transparent', 'border-transparent');
      navContainer.classList.replace('h-20', 'h-16');
    } else {
      navbar.classList.remove('bg-[#0f172a]/90', 'backdrop-blur-md', 'border-white/5', 'shadow-md');
      navbar.classList.add('bg-transparent', 'border-transparent');
      navContainer.classList.replace('h-16', 'h-20');
    }
  }

  window.addEventListener('scroll', handleScroll);

  if (menuToggle && mobileMenu && navbar) {
    menuToggle.addEventListener('click', () => {
      isMenuOpen = !isMenuOpen;
      menuToggle.classList.toggle('is-active');
      
      if (isMenuOpen) {
        // ABRIR
        // 1. Aplicamos la clase que fuerza el color sólido INSTANTÁNEAMENTE
        navbar.classList.add('nav-open');
        
        // 2. Mostramos el menú
        mobileMenu.classList.remove('opacity-0', 'pointer-events-none');
        document.body.style.overflow = 'hidden';
        
      } else {
        // CERRAR
        mobileMenu.classList.add('opacity-0', 'pointer-events-none');
        document.body.style.overflow = '';
        
        // Quitamos la clase forzada
        navbar.classList.remove('nav-open');
        
        // Recalculamos el scroll para ver si debe ser transparente o glass
        handleScroll();
      }
    });

    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        isMenuOpen = false;
        menuToggle.classList.remove('is-active');
        mobileMenu.classList.add('opacity-0', 'pointer-events-none');
        document.body.style.overflow = '';
        
        navbar.classList.remove('nav-open');
        handleScroll();
      });
    });
  }
</script>